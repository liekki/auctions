{
  "env": {
    "server": {
      "plugins": [
        ["module-resolver", {
          "root": ["./src/server"],
          "alias": {
            "utils": "./src/client/utils/index.js"
          }
        }]
      ]
    },
    "client": {
      "presets": [
        "react"
      ],
      "plugins": [
        ["module-resolver", {
          "root": ["./src/client"],
        }]
      ]
    }
  },
  "presets": [
    ["es2015"]
  ],
  "plugins": [
    "transform-object-rest-spread",
    "transform-async-to-generator"
  ]
}
